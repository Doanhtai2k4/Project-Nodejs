{
  // cấu hình cho phần typescript
"compilerOptions": {
"module": "commonjs",   // dịch code từ typescript sang version nào của js , khi dùng commonjs thì sử dụng cú pháp required
"esModuleInterop": true,
"target": "es6",      // biet duoc version js
"sourceMap": true,    // sợi dây kết nối js và ts
"skipLibCheck": true,
"outDir": "dist",        // đầu ra lưu ntn
"rootDir": "src",      // chỉ biên dich npx tsc bên trong src
"baseUrl": ".",       // quan ly toan bo du an
"paths": {
      "config/*": ["./src//config/*"],
      "controllers/*": ["./src//controllers/*"],
      "models/*": ["./src//models/*"],
      "routes/*": ["./src//routes/*"],
      "services/*": ["./src//services/*"],

    }
}
}